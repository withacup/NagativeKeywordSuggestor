  <form>
  <div id="container">


    <h1>Select News Channel</h1>
   


    <div class="picker">
      <select  multiple="multiple" class="image-picker masonry">
        <option data-img-src='http://m.files.bbci.co.uk/modules/bbc-morph-news-waf-page-meta/2.0.0/bbc_news_logo.png' value='1'>BBC</option>
        <option data-img-src='http://cdn.cnn.com/cnn/.e/img/3.0/global/misc/cnn-logo.png' value='2'>CNN</option>
        <option data-img-src='http://pmcdeadline2.files.wordpress.com/2014/06/msnbc_logogrid.jpg?crop=153px%2C98px%2C328px%2C220px&resize=446%2C299' value='3'>MSNBC</option>
        <option data-img-src='https://lh3.googleusercontent.com/l8woCU1YmtyKlkNOh2TNvQJj8P78Rm56JljLDUj-83YzD3OU6UCvqM-vzqpBOkOrW2Q=w300' value='4'>FOX News</option>
        <option data-img-src='https://lh4.ggpht.com/6AVtexHQ5HoBAqTmLjZwJQEh4d3AdsntRUTqZTztYtUcO14-800dQko6jr9HEoIFM7gr=w300' value='5'>China Daily</option>
      </select>
    </div>

<!-- Indicates a successful or positive action -->
<button type="button" id="open_select", class="btn btn-success">Success</button>
  <a href="localhost:8090/show">Visit W3Schools.com!</a>


  <script type="text/javascript">

    jQuery("select.image-picker").imagepicker({
      hide_select:  false,
    });

    jQuery("select.image-picker.show-labels").imagepicker({
      hide_select:  false,
      show_label:   true,
    });

    jQuery("select.image-picker.limit_callback").imagepicker({
      limit_reached:  function(){alert('We are full!')},
      hide_select:    false
    });

    var container = jQuery("select.image-picker.masonry").next("ul.thumbnails");
    container.imagesLoaded(function(){
      container.masonry({
        itemSelector:   "li",
      });
    });

  </script>

  </form>

